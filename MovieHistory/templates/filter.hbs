<header>
  <h1>Filters</h1>
</header>
<form>
  <input type="text" id="search-movie" placeholder="search">
  <select id="yearFilt">
    <option value="default" selected="true" disabled="disabled">Filter by Year</option>
    {{#each Year}}
    <option class="year">{{[]}}</option>
    {{/each}}
  </select>
  <select id="actorFilt">
    <option value="default" selected="true" disabled="disabled">Filter by Actor</option>
    {{#each Actors}}
    <option class="actors">{{[]}}</option>
    {{/each}}
  </select>
  <select id="ratingFilt">
    <option value="default" selected="true" disabled="disabled">Filter by Rating</option>
    {{#each Rating}}
    <option class="rating">{{[]}}</option>
    {{/each}}
  </select>
  <br>
  <input class="searchBtn" type="button" name="search" value="Search Movies">
  <input class="resetBtn" type="button" name="reset" value="Reset Filters">
</form>